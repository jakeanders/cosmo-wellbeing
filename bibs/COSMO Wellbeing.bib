  shorttitle = {Predictors of Mental Health during the {{Covid-19}} Pandemic in the {{US}}},
  author = {K{\"a}mpfen, Fabrice and Kohler, Iliana V. and Ciancio, Alberto and de Bruin, W{\"a}ndi Bruine and Maurer, J{\"u}rgen and Kohler, Hans-Peter},
  year = {2020},
